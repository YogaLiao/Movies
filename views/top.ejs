<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
<link rel="stylesheet" type = "text/css" href="/style.css">
<body class = "bg-dark bg-gradient" style="--bs-bg-opacity: .4;"></body>
<h1 class = "mb-4 display-1">Top Movies for YOU</h1>


<div class="container">
    <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container-fluid">
          <a class="navbar-brand" href="/movies/new">Add a New Movie</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse d-inline" id="navbarNavDropdown">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="/">Home</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/movies">New Recommendations</a>
              </li>
              <form action="/movies/sort" method = "POST">
                <select class="nav-link dropdown-toggle dropdown-menu bg-transparent border-0" name = "sort" onchange="this.form.submit()" id="navbarDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                  <option value = "select" class="dropdown-item">Sory by</option>
                  <option value = "title" class="dropdown-item">Name</option>
                  <option value = "rank" class="dropdown-item">Rank</option>
                  <option value = "imDbRating" class="dropdown-item">Rating</option>
                </select>
            </form>
            </ul>
            <form class="d-flex" action = "/movies/search" method = "POST">
              <input class="form-control me-2" name = "search" type="search" placeholder="Search" aria-label="Search">
              <button class="btn btn-outline-light" type="submit">Search</button>
            </form>
          </div>
        </div>
      </nav>
    <div class="row justify-content-around">
    <% data.forEach(x => { %>
    
        <div class="col-2">
            <div class="image text-center">
                <img src="<%= x.image%>" alt="<%= x.title %>" width="160px" class = "shadow-sm p-1 mb-1 bg-transparent rounded">
            </div>
        <div class="text-center">
            <a href="/movies/<%= x._id %>" class="title text-center text-decoration-none text-reset"><%= x.title %></a>
        </div>
        <h6 class = "text-center"><%= x.imDbRating %></h6>
    </div>
    <% }) %>
    </div>
    
</div>