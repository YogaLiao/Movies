<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
<link rel = "stylesheet" type = "text/css" href = "style.css">

<h1 class = "mb-4 display-1">Top Movies for YOU</h1>


<div class="container">
    <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container-fluid">
          <a class="navbar-brand" href="/movies/new">Add a New Movie</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="#">Home</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/movies">New Recommendations</a>
              </li>
            </ul>
            <form class="d-flex" action = "/movies/search" method = "POST">
              <input class="form-control me-2" name = "search" type="search" placeholder="Search" aria-label="Search">
              <button class="btn btn-outline-success" type="submit">Search</button>
            </form>
          </div>
        </div>
      </nav>
    <div class="row justify-content-around">
    <% data.forEach(x => { %>
    
        <div class="col-2">
            <div class="image text-center">
                <img src="<%= x.image%>" alt="<%= x.title %>">
            </div>
        <div class="text-center">
            <a href="/movies/<%= x._id %>" class="title text-center"><%= x.title %></a>
        </div>
        <h6 class = "text-center"><%= x.imDbRating %></h6>
    </div>
    <% }) %>
    </div>
    
</div>