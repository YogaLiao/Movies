<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

<body class = "bg-dark bg-gradient" style="--bs-bg-opacity: .4;">

<h1 class = "mb-5 display-3">Edit <%= data.title %></h1>

<form action = "/movies/<%= data._id%>/?_method=PUT" method = "POST">
    <div class="mb-3 mx-5">
      <label for="id" class="form-label">IMDB ID: </label>
      <input type="text" class="form-control" id="id" value="<%= data.id %>" name = "id">
    </div>
    <div class="mb-3 mx-5">
      <label for="rank" class="form-label">Rank: </label>
      <input type="number" class="form-control" id="rank" value="<%= data.rank %>" name = "rank">
    </div>
    <div class="mb-3 mx-5">
      <label for="title" class="form-label">Title: </label>
      <input type="text" class="form-control" id="title" value="<%= data.title %>" name = "title">
    </div>
    <div class="mb-3 mx-5">
      <label for="fullTitle" class="form-label">Full Title: </label>
      <input type="text" class="form-control" id="fullTitle" value="<%= data.fullTitle %>" name = "fullTitle">
    </div>
    <div class="mb-3 mx-5">
      <label for="year" class="form-label">Year: </label>
      <input type="number" class="form-control" id="year" value="<%= data.year %>" name = "year">
    </div>
    <div class="mb-3 mx-5">
      <label for="image" class="form-label">Image URL: </label>
      <input type="text" class="form-control" id="image" value="<%= data.image %>" name = "image">
    </div>
    <div class="mb-3 mx-5">
      <label for="crew" class="form-label">Crew: </label>
      <input type="text" class="form-control" id="crew" value="<%= data.crew %>" name = "crew">
    </div>
    <div class="mb-3 mx-5">
      <label for="imDbRating" class="form-label">Rating: </label>
      <input type="number" class="form-control" id="imDbRating" value="<%= data.imDbRating %>" name = "imDbRating">
    </div>
    <div class="mb-3 mx-5">
      <label for="imDbRatingCount" class="form-label">Rating Count: </label>
      <input type="number" class="form-control" id="imDbRatingCount" value="<%= data.imDbRatingCount %>" name = "imDbRatingCount">
    </div>
    <button type="submit" class="btn btn-primary mx-5">Submit</button>
  </form>