<h1 class = "mb-5 display-3">Edit Review for <%= data.title %></h1>

<form action = "/movies/reviews/<%= data._id%>/?_method=PUT" method = "POST">
    <div class="mb-3 mx-5">
        <label for="id" class="form-label">IMDB ID: </label>
        <input type="text" readonly class="form-control-plaintext" value = "<%= data.id %>" id="id" name="id">
      </div>
      <div class="mb-3 mx-5">
        <label for="dbid" class="form-label">ID: </label>
        <input type="text" readonly class="form-control-plaintext" value = "<%= data.dbid %>" id="dbid" name="dbid">
      </div>
      <div class="mb-3 mx-5">
        <label for="title" class="form-label">Movie Title </label>
        <input type="text" readonly class="form-control-plaintext" value = "<%= data.title %>" id="title" name="title">
      </div>
      <div class="mb-3 mx-5">
        <label for="username" class="form-label">Username: </label>
        <input type="text" class="form-control" id="username" name="username" value = "<%= data.username %>">
      </div>
      <div class="mb-3 mx-5">
        <label for="reviewTitle" class="form-label">Title: </label>
        <input type="text" class="form-control" id="reviewTitle" name = "reviewTitle" value = "<%= data.reviewTitle %>">
      </div>
      <div class="mb-3 mx-5">
        <label for="content" class="form-label">Review: </label>
        <input type="text" class="form-control" id="content" name = "content" value = "<%= data.content %>"> 
      </div>
      <button type="submit" class="btn btn-primary mx-5">Submit</button>
  </form>