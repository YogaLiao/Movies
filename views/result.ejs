<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

<body class = "bg-dark bg-gradient" style="--bs-bg-opacity: .4;">
    

<h1 class = "mb-5 display-2">Search Results for <%= result.expression %></h1>

<div class="container">
    <div class="row justify-content-start">
        <% result.results.forEach(x => { %>
        
            <div class = "col aligh-items-start">
                <div class="image text-center">
                    <img src="<%= x.image%>" alt="<%= x.title %>" width = "200px">
                </div>
            <div class="text-center">
                <a href="/movies/results/<%= x.id %>" class="title text-center"><%= x.title %></a>
            </div>
        </div>
        <% }) %>
        </div>
</div>
