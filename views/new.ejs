<h1 class = "mb-5 display-1">Add a New Movie</h1>
<div class="container">
<form action = "/movies/add" method = "POST">
    <div class="mb-3 mx-5">
      <label for="id" class="form-label">IMDB ID: </label>
      <input type="text" class="form-control" id="id" name="id">
    </div>
    <div class="mb-3 mx-5">
      <label for="rank" class="form-label">Rank: </label>
      <input type="number" class="form-control" id="rank" name = "rank">
    </div>
    <div class="mb-3 mx-5">
      <label for="title" class="form-label">Title: </label>
      <input type="text" class="form-control" id="title" name = "title">
    </div>
    <div class="mb-3 mx-5">
      <label for="fullTitle" class="form-label">Full Title: </label>
      <input type="text" class="form-control" id="fullTitle" name = "fullTitle">
    </div>
    <div class="mb-3 mx-5">
      <label for="year" class="form-label">Year: </label>
      <input type="number" class="form-control" id="year" name = "year">
    </div>
    <div class="mb-3 mx-5">
      <label for="image" class="form-label">Image URL: </label>
      <input type="text" class="form-control" id="image" name = "image">
    </div>
    <div class="mb-3 mx-5">
      <label for="crew" class="form-label">Crew: </label>
      <input type="text" class="form-control" id="crew" name = "crew">
    </div>
    <div class="mb-3 mx-5">
      <label for="imDbRating" class="form-label">Rating: </label>
      <input type="number" class="form-control" id="imDbRating" name = "imDbRating">
    </div>
    <div class="mb-3 mx-5">
      <label for="imDbRatingCount" class="form-label">Rating Count: </label>
      <input type="number" class="form-control" id="imDbRatingCount" name = "imDbRatingCount">
    </div>
    <button type="submit" class="btn btn-outline-success mx-5">Submit</button>
    <a href="/movies" class="btn btn-outline-danger mx-5">Cancel</a>
  </form>
</div>